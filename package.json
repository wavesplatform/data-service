  "author": "Dmitry Shuranov <dvshur@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "export $(cat variables.env | xargs) && nodemon index.js",
    "lint": "eslint src",
    "dev": "export $(cat variables.env | xargs) && NODE_ENV=development nodemon --inspect",
    "test": "npm run test:u && npm run test:i",
    "test:u": "jest --config=config/jest.config.unit.json",
    "test:i": "export $(cat variables.stage.env | xargs) && jest --config=config/jest.config.integration.json"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "husky": "^1.0.0-rc.8",
    "jest": "^22.4.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "@waves/data-entities": "^1.1.0",
    "@waves/json-bigint": "git+https://github.com/wavesplatform/json-bigint.git",
    "bignumber.js": "^7.0.1",
    "chalk": "^2.3.2",
    "check-env": "^1.3.0",
    "folktale": "^2.1.0",
    "joi": "^13.2.0",
    "json-colorizer": "^1.1.1",
    "knex": "^0.14.6",
    "koa": "^2.5.0",
    "koa-compose": "^4.1.0",
    "koa-qs": "^2.0.0",
    "koa-requestid": "^2.0.1",
    "koa-router": "^7.4.0",
    "pg-promise": "^8.2.3",
    "ramda": "^0.25.0",
    "ramda-adjunct": "^2.6.0",
    "winston": "^3.0.0-rc4"
